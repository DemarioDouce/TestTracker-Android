<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NurseRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="752dp"
        tools:layout_editor_absoluteY="710dp"
        android:background="@color/purple_500"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/firstNameEtt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/purple_500"
            android:background="@color/white"
            android:hint="First name"
            android:textColorHint="@color/purple_500"
            android:padding="10dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/lastNameEtt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/purple_500"
            android:background="@color/white"
            android:hint="Last name"
            android:textColorHint="@color/purple_500"
            android:padding="10dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/departmentEtt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/purple_500"
            android:background="@color/white"
            android:hint="Department"
            android:textColorHint="@color/purple_500"
            android:padding="10dp"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/passwordEtt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/purple_500"
            android:background="@color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/purple_500"
            android:padding="10dp"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/white"
            android:text="REGISTER"
            android:onClick="nurseRegister"
            android:textColor="@color/purple_500"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>